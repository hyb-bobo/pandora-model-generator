    <select id="get" resultMap="tBdPersonResultMap">
        select top 1
        <include refid="selectClause" />
        from dbo.t_bd_person
        where
        id = #{id}
    </select>

    <!--用于非关联查询使用-->
    <select id="get2" resultMap="tBdPersonResultMap2">
        select top 1
        <include refid="selectClause" />
        from dbo.t_bd_person
        where
        id = #{id}
    </select>

    <select id="query" parameterType="com.eohi.qll.sql.Where" resultMap="tBdPersonResultMap">
        select
        <if test="pageSize != 0">
            * FROM(
            SELECT TOP ${allRowNums}
            ROW_NUMBER() OVER(
            <if test="orderBy != null">
                order by
            ${orderBy}
            </if>
            <if test="orderBy == null">
                order by
                id
            </if>
            ) AS ROWID,
        </if>
        <include refid="selectClause" />
        FROM dbo.t_bd_person
        <if test="join != null">
        ${join}
        </if>
        ${whereHead}
        <trim suffixOverrides="and">
            <if test="id != null">
                id = #{id} and
            </if>
        ${whereClause}
        </trim>
        <if test="groupBy != null">
            group by
        ${groupBy}
        </if>
        <if test="(pageSize == null or pageSize == 0)and orderBy != null">
            order by
        ${orderBy}
        </if>
        <if test="pageSize != 0">
            ) AS TEMP1
            WHERE ROWID> ${startRow}
        </if>
    </select>

